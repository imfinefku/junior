<?xml version="1.0" encoding="UTF-8" ?> 
    <!DOCTYPE mapper 
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.base.dao.LoginDao">
    <select id="login" parameterType="HashMap" resultType="com.base.bean.LoginInfo">
        select *
        from logininfo
        where username=#{username}
        and password=#{password}
    </select>
    <update id="updatePassword" parameterType="com.base.bean.LoginInfo">
    	update 
    	logininfo
    	set password=#{password}
    	where id=#{id}
    </update>
</mapper> 
