<?xml version="1.0" encoding="UTF-8" ?> 
    <!DOCTYPE mapper 
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.base.dao.YouLianDao">
	<select id="getData" parameterType="HashMap" resultType="com.base.bean.Friend">
		select *
		from friend
		order by sort desc
		limit #{start},#{limit}
	</select>
	<select id="getDataTotal" parameterType="HashMap" resultType="Integer">
		select count(*)
		from friend
	</select>
	<insert id="insert" parameterType="com.base.bean.Friend">
		insert into friend(id,url,name,inserttime,sort,remarks)
		values(#{id},#{url},#{name},#{inserttime},#{sort},#{remarks})
	</insert>
	<delete id="delete" parameterType="HashMap">
		delete from friend
		where id=#{id}
	</delete>
	<update id="update" parameterType="com.base.bean.Friend">
		update friend
		set url=#{url},name=#{name},sort=#{sort},remarks=#{remarks}
		where id=#{id}
	</update>
	<select id="getAllData" resultType="com.base.bean.Friend">
		select id,url,name
		from friend
		order by sort desc,inserttime desc
	</select>
</mapper> 
